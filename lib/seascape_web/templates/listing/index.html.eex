<style>
    @media screen and (-webkit-min-device-pixel-ratio: 0) {
        input[type="range"].min::-webkit-slider-thumb {
            width: 15px;
            -webkit-appearance: none;
  			appearance: none;
            height: 15px;
            cursor: ew-resize;
            background: #FFF;
            box-shadow: 405px 0 0 400px #0d9488;
            border-radius: 50%;

        }

        input[type="range"].max::-webkit-slider-thumb {
            width: 15px;
            -webkit-appearance: none;
  			appearance: none;
            height: 15px;
            cursor: ew-resize;
            background: #FFF;
            box-shadow: -405px 0 0 400px #0d9488;
            border-radius: 50%;

        }
    }
</style>

<!-- Professor bar -->
<div class="bg-teal-100">
    <div class="mx-auto container mx-6">
        <div class="pt-7">
            <span class="text-sm tracking-widest uppercase px-2 py-1 bg-teal-300 mr-auto mb-2 rounded mb-3">
                Professors
            </span>

            <p class="text-md font-serif pt-3 text-teal-600">4 professors found for "<%= @q %>"</p>
        </div>
    </div>

    <div class="flex flex-row overflow-x-scroll">
        <div class="flex container mx-auto">
            <div class="flex-shrink-0 border rounded-lg my-5 w-72 bg-white mr-2">
                <img src="/images/losers.jpg" class="object-cover h-40 w-full rounded-t-lg" />
                <div class="m-4">
                    <p class="text-lg font-bold text-teal-600">Moshiri, Alexander Niema</p>
                    <div class="flex flex-row mt-3">
                        <div class="flex-grow flex flex-col">
                            <p class="font-mono flex-grow">#1</p>
                            <p class="flex-grow text-sm text-gray-500">prof rank</p>
                        </div>
                        <div class="flex-grow flex flex-col">
                            <p class="font-mono flex-grow">99.1%</p>
                            <p class="flex-grow text-sm text-gray-500">prof approval</p>
                        </div>
                        <div class="flex-grow flex flex-col">
                            <p class="font-mono flex-grow">15</p>
                            <p class="flex-grow text-sm text-gray-500">classes</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-2 container mx-auto">
    <!-- all content -->
    <div class="pt-5 flex flex-row">
        <!-- filter pane -->
        <div class="w-64 border rounded-lg px-4 mr-8">

            <!-- expand/collapse -->
            <p class="text-xs tracking-widest uppercase text-gray-500 pt-6">Collapse sections</p>
            <p class="text-md font-bold pt-3 text-teal-600 pb-6">- Collapse all sections</p>

            <!-- sort by -->
            <p class="text-xs tracking-widest uppercase text-gray-500 pt-6">Sort by</p>
            <select class="w-full mt-3 mb-6 rounded-lg border-gray-200" name="sortBy" id="sortBy">
                <option value="relevance" <%= if @sortBy == "relevance" do %>selected<% end %>>Sort by relevance</option>
                <option value="ranking" <%= if @sortBy == "ranking" do %>selected<% end %>>Sort by ranking</option>
                <option value="time" <%= if @sortBy == "time" do %>selected<% end %>>Sort by time</option>
                <option value="gpa" <%= if @sortBy == "gpa" do %>selected<% end %>>Sort by GPA</option>
            </select>

            <!-- availability -->
            <p class="text-xs tracking-widest uppercase text-gray-500 pt-6">Course availability</p>
            <div class="text-md pt-3 pb-6">
                <input class="relative align-middle bottom-0.5 form-checkbox text-teal-600" type="checkbox" id="vehicle3" name="vehicle3" value="Boat">
                <label class="text-md pl-1 text-gray-900" for="vehicle3">Hide unavailable FA21</label><br>
            </div>

            <p class="text-xs tracking-widest uppercase text-gray-500 pt-6">Filters</p>
            <div class="text-md pt-3 pb-6">
                <label class="text-sm text-gray-900" for="range1">Min rec. prof: 0%</label><br>
                <input class="min w-full rounded-lg bg-gray-400 mt-2 mb-5 appearance-none overflow-hidden" type="range" min="1" max="100" value="0" id="range1">

                <label class="text-sm text-gray-900" for="range1">Min avg GPA: 0%</label><br>
                <input class="min w-full rounded-lg bg-gray-400 mt-2 mb-5 appearance-none overflow-hidden" type="range" min="0" max="400" value="0" id="range1">

                <label class="text-sm text-gray-900" for="range1">Max time/wk: 20</label><br>
                <input class="max w-full rounded-lg bg-gray-400 mt-2 mb-5 appearance-none overflow-hidden" type="range" min="0" max="20" value="20" id="range1">
            </div>
            <!-- sort by -->
        </div>

        <!-- results -->
        <div class="flex-grow">
            <span class="text-sm tracking-widest uppercase px-2 py-1 bg-teal-300 mr-auto mb-2 rounded mb-3">
                Sections
            </span>

            <p class="text-md font-serif pt-3 text-teal-600">4 sections found for "<%= @q %>"</p>

            <!-- each section -->
            <div class="mt-5">
